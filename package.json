{
    "name": "melon",
    "packageManager": "yarn@4.1.0",
    "scripts": {
        "compile": "hardhat compile",
        "pretty": "prettier --write --plugin=prettier-plugin-solidity ./hardhat.config.ts ./contracts ./test",
        "flatten": "ethereum-waffle flatten",
        "test": "hardhat test",
        "clean": "rm -rf cache artifacts flatten"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "overrides": [
            {
                "files": "*.js",
                "options": {
                    "tabWidth": 2,
                    "semi": true,
                    "singleQuote": true
                }
            },
            {
                "files": "*.ts",
                "options": {
                    "tabWidth": 2,
                    "semi": true,
                    "singleQuote": true
                }
            }
        ]
    },
    "dependencies": {
        "@chainlink/contracts": "^0.6.1",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
        "@nomiclabs/hardhat-ethers": "^2.0.5",
        "@nomiclabs/hardhat-etherscan": "^3.1.8",
        "@nomiclabs/hardhat-waffle": "^2.0.2",
        "@openzeppelin/contracts": "^4.5.0",
        "@openzeppelin/contracts-upgradeable": "^4.5.0",
        "@openzeppelin/hardhat-upgrades": "^1.28.0",
        "@redstone-finance/evm-connector": "^0.5.0",
        "@typechain/ethers-v5": "^9.0.0",
        "@typechain/hardhat": "^4.0.0",
        "@types/chai": "^4.3.0",
        "@types/dotenv": "^8.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.18",
        "@uniswap/lib": "4.0.1-alpha",
        "@uniswap/v2-core": "github:islishude/uniswapv2-solc0.8",
        "chai": "^4.3.6",
        "dotenv": "^16.0.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.5.4",
        "hardhat": "^2.8.4",
        "hardhat-abi-exporter": "^2.8.0",
        "hardhat-gas-reporter": "^1.0.8",
        "solidity-coverage": "^0.7.20",
        "ts-node": "^10.5.0",
        "typechain": "^7.0.0",
        "typescript": "^4.5.5"
    }
}
