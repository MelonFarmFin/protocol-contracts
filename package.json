{
  "name": "melon",
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "compile": "hardhat compile",
    "pretty": "prettier --write --plugin=prettier-plugin-solidity ./hardhat.config.ts ./contracts ./test ./scripts",
    "flatten": "mkdir -p flatten && hardhat flatten ./contracts/6_Farm.sol > flatten/Farm.sol",
    "test": "hardhat test",
    "clean": "rm -rf cache artifacts flatten typechain-types"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "tabWidth": 2,
          "semi": true,
          "singleQuote": true
        }
      },
      {
        "files": "*.ts",
        "options": {
          "tabWidth": 2,
          "semi": true,
          "singleQuote": true
        }
      }
    ]
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "4.9.6",
    "@redstone-finance/evm-connector": "^0.5.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.11.19",
    "bignumber.js": "^9.1.2",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "ethereum-waffle": "3.4.4",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.4",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typechain": "^7.0.0",
    "typescript": "^5.3.3",
    "web3": "^4.8.0"
  }
}
